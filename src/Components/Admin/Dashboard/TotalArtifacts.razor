@namespace mims.Components.Admin.Dashboard
@using mims.Services.Interfaces
@using mims.Services

@inject IArtifactService ArtifactService 
<Card Class="my-card-container mb-4 rounded-4 bg-white border-0" Style="width:24rem; background-color:white">
    <CardBody>
        <div class="d-flex">
            <Card Class="border-0" Style="background-color: #cfe8ff">
                <CardBody>
                    <h1> <i class="bi bi-box-fill" style="color:#3c91e6;"></i> </h1>
                </CardBody>
            </Card>
            <div class="mx-auto">
                <h1 class=""> &nbsp;&nbsp; @number</h1>
                <h6 class="">Total Artifacts</h6>
            </div>
        </div>
    </CardBody>
</Card>


@code {
    int number;
    protected override async Task OnInitializedAsync()
    {
        number = await ArtifactService.GetArtifactCount();
    }
}
