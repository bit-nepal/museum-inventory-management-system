@namespace mims.Components.Admin.Dashboard
@using mims.Services.Interfaces
@using mims.Services

@inject IArtifactService ArtifactService 
<Card Color="CardColor.Success" Class="mb-4" Style="width:18rem;">
    <CardBody>
        <CardTitle>Total Artifacts:</CardTitle>
        <CardText>@number</CardText>
    </CardBody>
</Card>



@code {
    int number;
    protected override async Task OnInitializedAsync()
    {
        number = await ArtifactService.GetArtifactCount();
        
    }

}
