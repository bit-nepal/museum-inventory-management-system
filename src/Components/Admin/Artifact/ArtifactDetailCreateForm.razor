@namespace mims.Components.Admin.Artifact

<Alert Color="AlertColor.Light">
    <div class="d-flex justify-content-between align-items-center">
        <h4 class="alert-heading">
            Add Artifacts !!
        </h4>
    </div>
</Alert>

